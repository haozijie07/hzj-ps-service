{
  "compilerOptions": {
    "target": "ES2020", // 编译目标
    "module": "commonjs", // 使用 CommonJS 模块
    "rootDir": "./src", // 源代码目录
    "outDir": "./dist", // 输出目录
    "strict": true, // 开启严格模式
    "esModuleInterop": true, // 支持与 ES 模块互操作
    "skipLibCheck": true // 跳过库文件类型检查
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts", "src/router/work"], // 确保包含 .d.ts 文件路径
  "exclude": ["node_modules"]
}
